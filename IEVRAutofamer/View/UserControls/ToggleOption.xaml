<UserControl x:Class="IEVRAutofamer.View.UserControls.ToggleOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEVRAutofamer.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             x:Name="root">

    <UserControl.Resources>
        <Style x:Key="ToggleButonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="Transparent"
                                    CornerRadius="17"
                                    BorderBrush="{StaticResource IEVRYellow}"
                                    BorderThickness="3"
                                    Height="35"
                                    Width="70"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"/>
                            <Ellipse x:Name="Ellipse"
                                     Height="30"
                                     Width="30"
                                     HorizontalAlignment="Left"
                                     Fill="Transparent"
                                     Stroke="{StaticResource IEVRYellow}"
                                     StrokeThickness="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect ShadowDepth="1" Opacity="0.8"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            
                        </Grid>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Checked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="#06458b"
                                                        Duration="0:0:0.15"/>
                                        <ThicknessAnimation Storyboard.TargetName="Ellipse"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="38 0 0 0"
                                                            Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="Unchecked">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Border"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="Transparent"
                                                        Duration="0:0:0.15"/>
                                        <ThicknessAnimation Storyboard.TargetName="Ellipse"
                                                            Storyboard.TargetProperty="Margin"
                                                            To="0 0 0 0"
                                                            Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <StackPanel Orientation="Horizontal" 
                  VerticalAlignment="Center"
                  Height="50">

            <TextBlock x:Name="toggleText" Text="{Binding Text}"
                     FontSize="22"
                     FontWeight="Bold"
                     Foreground="{Binding Foreground}"
                     Width="325"
                     VerticalAlignment="Center"/>

            <CheckBox x:Name="checkBox"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Style="{DynamicResource ToggleButonStyle}"
                      Command="{Binding Command, ElementName=root}"
                      IsChecked="{Binding IsChecked, ElementName=root, Mode=TwoWay}"/>
         </StackPanel>
    </Grid>
</UserControl>

