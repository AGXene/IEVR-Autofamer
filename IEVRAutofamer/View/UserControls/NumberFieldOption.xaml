<UserControl x:Class="IEVRAutofamer.View.UserControls.NumberFieldOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEVRAutofamer.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="600"
             x:Name="root">

    <Grid>
        <StackPanel Orientation="Horizontal" 
                  VerticalAlignment="Center"
                  Height="50">

            <TextBlock x:Name="toggleText" Text="{Binding Text}"
                     FontSize="22"
                     FontWeight="Bold"
                     Foreground="{Binding Foreground}"
                     Width="325"
                     VerticalAlignment="Center"/>

            <Border Width="55"
                    BorderThickness="3"
                    CornerRadius="12"
                    Height="45"
                    BorderBrush="{StaticResource IEVRYellow}"
                    Background="Transparent"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom">

                <TextBox x:Name="NumberBox"
                         HorizontalAlignment="Center"
                         Text="{Binding Value, ElementName=root, Mode=TwoWay}"
                         VerticalAlignment="Center"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="#FF243244"
                         FontSize="20">
                </TextBox>
            </Border>

            <Label Content="nº matches"
                   VerticalAlignment="Bottom"
                   Foreground="{StaticResource IEVRYellow}"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="5,15,0,0"/>

        </StackPanel>
    </Grid>
</UserControl>
