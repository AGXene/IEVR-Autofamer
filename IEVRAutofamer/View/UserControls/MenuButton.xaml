<UserControl x:Class="IEVRAutofamer.View.UserControls.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEVRAutofamer.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="240"
             x:Name="root">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 To="260"
                                                 Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="Height"
                                                 To="220"
                                                 Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>

                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width"
                                                 To="240"
                                                 Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="Height"
                                                 To="200"
                                                 Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                    
                </Trigger>
            </Style.Triggers>    
        </Style>
    </UserControl.Resources>

    <Button x:Name="button" Width="240" Height="200" 
                Background="Transparent" BorderBrush="Transparent"
                HorizontalAlignment="Center"
                Command="{Binding OnClicked, ElementName=root}">

        <StackPanel VerticalAlignment="Center" Orientation="Vertical">

                <Image x:Name="ImageSource" Source="{Binding ButtonImage}" 
                       Stretch="Fill" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Width="180"
                       Height="180"/>

                <TextBlock x:Name="TextImage" Text="{Binding ButtonText}"
                           Foreground="{StaticResource IEVRDarkBlue}"
                           FontSize="20"
                           FontWeight="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

            </StackPanel>          
            
    </Button>
</UserControl>
