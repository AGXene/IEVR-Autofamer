<UserControl x:Class="IEVRAutofamer.View.UserControls.ResultsPanelElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEVRAutofamer.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">

    <UserControl.Resources>
        <Style x:Key="DataResult" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Height="60">

                            <Label x:Name="TitleLabel"
                                   Content="{Binding Title, ElementName=root}"
                                   VerticalAlignment="Center"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="#FF576588"/>

                            <Label x:Name="ResultsLabel"
                                   Content="{Binding Result, ElementName=root}"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#FF3871BD"/>

                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>


    <Grid>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Height="45">
            
            <Image x:Name="ImageIcon"
                   Source="{Binding Icon, ElementName=root, Mode=TwoWay}"
                   VerticalAlignment="Center"
                   Stretch="Fill"
                   Height="25"
                   Margin="0,3,0,0"/>

            <TextBox x:Name="textBox"
                     HorizontalAlignment="Right"
                     Style="{DynamicResource DataResult}"
                     Margin="15,0,0,0"/>
            
        </StackPanel>
    </Grid>
</UserControl>
