<UserControl x:Class="IEVRAutofamer.View.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IEVRAutofamer.View.Views"
             xmlns:controls="clr-namespace:IEVRAutofamer.View.UserControls" 
             xmlns:viewmodel="clr-namespace:IEVRAutofamer.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280">

        <Grid Background="{StaticResource IEVRWhite}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/> <!--Header--> 
            <RowDefinition/>
            <RowDefinition Height="50"/> <!--Footer--> 
        </Grid.RowDefinitions>

        <!--Header-->

        <controls:TitleBar/>
            
        <!--TitleBar--> 
            
        <!--Body-->

        <Image Grid.Row="1"
               Source="/Resources/Images/Patterns/Background_Pattern_Extended.png"
               Stretch="None"
               Opacity="0.5"/>

        <Image Grid.Row="1"
               Source="/Resources/Images/Patterns/Backrgound_Pixels_Pattern.png"
               Stretch="UniformToFill"
               Opacity="0.5"/>

        <!--<Image Grid.Row="1"
               Source="/Resources/Images/Logo_Juego.png"
               Stretch="Fill"
               Width="265"
               Height="165"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               Margin="0,50,35,0"/>-->

        <controls:MenuTitleContainer Grid.Row="1"
                                     TitleText="WELCOME TO AUTOFARMER!"
                                     TitleImage="/Resources/Images/Menu_TitleContainer.png"
                                     VerticalAlignment="Top"
                                     Margin="-12,75,0,0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Margin="0,155,0,0">

            <controls:MenuButton ButtonImage="/Resources/Images/Buttons/Chronichle Mode.png"
                                 ButtonText="CHRONICLE MODE"
                                 OnClicked="{Binding OnChronicleModeClicked}"/>

            <controls:MenuButton ButtonImage="/Resources/Images/Buttons/Competition Mode.png"
                                 ButtonText="COMPETITION MODE"
                                 OnClicked="{Binding OnCompetitionModeClicked}"/>
            
            <controls:MenuButton ButtonImage="/Resources/Images/Buttons/Work In Progress.png"
                                 ButtonText="ONLINE MODE"
                                 OnClicked="{Binding OnInProgressClicked}"/>
            
            <controls:MenuButton ButtonImage="/Resources/Images/Buttons/Work In Progress.png"
                                 ButtonText="BEANS MODE"
                                 OnClicked="{Binding OnInProgressClicked}"/>
        </StackPanel>

        <Button Grid.Row="1"
                Content="Developed By Xene"
                Background="Transparent"
                BorderBrush="Transparent"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Margin="0,0,0,50"
                FontSize="18"
                FontWeight="ExtraBold"
                Foreground="#FF7A97BF"
                Command="{Binding DevelopedByXeneClicked}"/>

        <!--Footer-->

        <controls:BottomBar Grid.Row="2"/>

        </Grid>
</UserControl>
